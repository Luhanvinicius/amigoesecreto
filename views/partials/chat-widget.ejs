<script>
let chatOpen = false;
let chatPollInterval = null;

function toggleChat() {
    chatOpen = !chatOpen;
    const window = document.getElementById('chat-window');
    const iconSpan = document.querySelector('.chat-icon');
    const closeSpan = document.querySelector('.chat-close');
    
    if (chatOpen) {
        window.classList.add('open');
        iconSpan.style.display = 'none';
        closeSpan.style.display = 'inline';
        loadChatMessages();
        // Iniciar polling
        chatPollInterval = setInterval(loadChatMessages, 5000);
    } else {
        window.classList.remove('open');
        iconSpan.style.display = 'inline';
        closeSpan.style.display = 'none';
        // Parar polling
        if (chatPollInterval) clearInterval(chatPollInterval);
    }
}

async function loadChatMessages() {
    try {
        const response = await fetch('/api/chat/messages');
        const data = await response.json();
        
        if (data.success) {
            renderChatMessages(data.messages);
            updateUnreadBadge(data.unread || 0);
        }
    } catch (error) {
        console.error('Erro ao carregar mensagens:', error);
    }
}

function renderChatMessages(messages) {
    const container = document.getElementById('chat-messages');
    
    if (!messages || messages.length === 0) {
        container.innerHTML = `
            <div class="chat-welcome">
                <p>ðŸ‘‹ OlÃ¡! Sou a Lia.</p>
                <p>Como posso ajudar vocÃª hoje?</p>
            </div>
        `;
        return;
    }
    
    const userId = <%= user ? user.id : 0 %>;
    
    container.innerHTML = messages.map(msg => `
        <div class="chat-message ${msg.sender_id === userId ? 'sent' : 'received'}">
            ${msg.message}
            <div class="time">${new Date(msg.created_at).toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' })}</div>
        </div>
    `).join('');
    
    container.scrollTop = container.scrollHeight;
}

function updateUnreadBadge(count) {
    const badge = document.getElementById('unread-badge');
    if (count > 0 && !chatOpen) {
        badge.textContent = count;
        badge.style.display = 'block';
    } else {
        badge.style.display = 'none';
    }
}

async function sendChatMessage() {
    const input = document.getElementById('chat-message-input');
    const message = input.value.trim();
    
    if (!message) return;
    
    try {
        const response = await fetch('/api/chat/send', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ message: message })
        });
        
        const data = await response.json();
        
        if (data.success) {
            input.value = '';
            await loadChatMessages();
        }
    } catch (error) {
        console.error('Erro ao enviar mensagem:', error);
    }
}

// Carregar contagem de nÃ£o lidas ao carregar a pÃ¡gina
document.addEventListener('DOMContentLoaded', function() {
    if (<%= user ? 'true' : 'false' %>) {
        fetch('/api/chat/unread')
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    updateUnreadBadge(data.count || 0);
                }
            })
            .catch(console.error);
    }
});
</script>

